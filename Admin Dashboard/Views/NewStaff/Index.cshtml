@model IReadOnlyList<NewStaffViewModel>
@{
    ViewData["Title"] = "New Staff";
}
<div class="head bg-white p-15 between-flex">

    <div class="icons d-flex align-center">
        <span class="notification p-relative">
            <i class="fa-regular fa-bell fa-lg"></i>
        </span>
        <img src="~/imgs/avatar.png" alt="logo" />
    </div>
</div>

<h1 class="p-relative">New Staff</h1>

@if (@Model != null)
{
    <div class="projects p-20 bg-white rad-10 m-20">

        <div class="responsive-table">
            <table class="fs-15 w-full text-center">
                <thead>
                    <tr>
                        <td>Image</td>
                        <td>New Staff Id</td>
                        <td>Email</td>
                        <td>Name</td>
                        <td>phone</td>
                        <td>Details</td>
                        <td>Accept</td>
                        <td>Delete</td>



                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @if(@item.PictureUrl == null){
                                    <img class="rounded-pill" src="~/imgs/team-01.png" />
                                }
                                else
                                {
                                    <img class="rounded-pill" src="@item.PictureUrl" />

                                }
                            </td>
                            <td>@item.RequestId</td>

                            <td>@item.Email</td>
                            <td>@item.Name</td>
                            <td>@item.phone</td>

                            <td>
                                <a asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-primary pe-2">
                                    Details
                                    <i class="fa-solid fa-arrow-right-to-bracket ps-1"></i>
                                </a>
                            </td>

                            <td>
                                <a asp-action="Accept" asp-route-id="@item.RequestId" class="btn btn-success pe-2">
                                    Accept
                                    <i class="fa-solid fa-accept"></i>
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.RequestId" class="btn btn-danger pe-2">
                                    Delete
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>




                    </tbody>
                }

            </table>
        </div>
    </div>
}
else
{
    <div class="alert-warning">
        <h3>No New Staff Request Found!!</h3>
    </div>
}
