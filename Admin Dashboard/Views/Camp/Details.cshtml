@model CampDto

@{
    ViewData["Title"] = "Details";
}

<h1 class="p-relative">Camp Details</h1>
<br />
<br />
<div class="row p-4">
    <div class="col-12">

        <div class="form-group">
            <label asp-for="@Model.CampType" class="col-form-label"></label>
            <input asp-for="@Model.CampType" class="form-control" disabled />
            <span asp-validation-for="@Model.CampType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description" class="col-form-label"></label>
            <input asp-for="@Model.Description" class="form-control" disabled />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Capacity" class="col-form-label"></label>
            <input asp-for="@Model.Capacity" class="form-control" disabled />
            <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.AgeRange" class="col-form-label"></label>
            <input asp-for="@Model.AgeRange" class="form-control" disabled />
            <span asp-validation-for="@Model.AgeRange" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RegistrationFees" class="col-form-label"></label>
            <input  asp-for="@Model.RegistrationFees" class="form-control" disabled />
            <span asp-validation-for="@Model.RegistrationFees" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.LocationName" class="col-form-label"></label>
            <input  asp-for="@Model.LocationName" class="form-control" disabled />

        </div>
        <div class="form-group">
            <label asp-for="@Model.StartDate" class="col-form-label"></label>
            <input  asp-for="@Model.StartDate" class="form-control" disabled />
            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EndDate" class="col-form-label"></label>
            <input  asp-for="@Model.EndDate" class="form-control" disabled />
            <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" disabled />
            <label asp-for="@Model.IsActive" class="form-check-label"></label>

        </div>
        <br />

        <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
        <a class="btn btn-light" asp-action="Index">Back To List</a>
    </div>
</div>




