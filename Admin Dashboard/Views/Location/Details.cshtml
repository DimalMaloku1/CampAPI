@model LocationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="p-relative">Details</h1>
<div class="m-4">

    <div class="form-group">
        <label asp-for="@Model.Id" class="col-form-label"></label>
        <input asp-for="@Model.Id" class="form-control" disabled />
        <span asp-validation-for="@Model.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" class="form-control" disabled />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Type" class="col-form-label"></label>
        <input asp-for="@Model.Type" class="form-control" disabled />
        <span asp-validation-for="@Model.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address" class="col-form-label"></label>
        <input asp-for="@Model.Address" class="form-control" disabled />
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Phone" class="col-form-label"></label>
        <input asp-for="@Model.Phone" class="form-control" disabled />
        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.RentalFees" class="col-form-label"></label>
        <input asp-for="@Model.RentalFees" class="form-control" disabled />
        <span asp-validation-for="@Model.RentalFees" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CampName" class="col-form-label"></label>
        <input asp-for="@Model.CampName" class="form-control" disabled />
        <span asp-validation-for="@Model.CampName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Crews" class="col-form-label"></label>
        @if(Model.Crews == null || Model.Crews.Count() == 0)
        {
            <input value="0 Crews" class="form-control" disabled />

        }
        else
        {
            <input value="@string.Join(", ", Model.Crews)" class="form-control" disabled />
        }

    </div>
    <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-light" asp-action="Index">Back To List</a>
</div>
<br />

