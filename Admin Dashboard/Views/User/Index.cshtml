@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "User";
}
<h1 class="p-relative">Users</h1>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover m-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.UserName)</th>
                <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(u => u.Roles)</th>


                <th>Actions</th>



            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.DisplayName</td>
                    <td>@item.Email</td>

                    <td>@item.PhoneNumber</td>

                    <td>@string.Join(", ", item.Roles.ToList())</td>


                    <td>

                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                    </td>



                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-warning">
        <h3>No Users Found :( </h3>
    </div>
}

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}

