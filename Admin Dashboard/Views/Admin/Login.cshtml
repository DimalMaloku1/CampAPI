@model LoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="icon" type="image/x-icon" href="~/logo.ico">

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8 login-box">
                <div class="col-lg-12 login-key">
                    <i class="fa fa-key" aria-hidden="true"></i>
                </div>
                <div class="col-lg-12 login-title">ADMIN PANEL</div>

                <div class="col-lg-12 login-form">
                    <div class="col-lg-12 login-form">
                        <form asp-controller="Admin" asp-action="Login">
                            <div class="form-group">
                                <label class="form-control-label">EMAIL</label>
                                <input asp-for="Email" class="form-control pe-2" />
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">PASSWORD</label>
                                <input asp-for="Password" type="password" class="form-control" />
                            </div>

                            <div class="col-lg-12 loginbttm">
                                <div asp-validation-summary="All" class="col-lg-6 login-btm login-text">
                                </div>

                            </div>
                            <div class="my-4">
                                <button type="submit" class="btn btn-outline-primary rounded-pill w-100">
                                    LOGIN
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-3 col-md-2"></div>
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
