
@{
    ViewData["Title"] = "Index";
}

<!-- Start Head -->
<div class="head bg-white p-15 between-flex">
    <div class="icons d-flex align-center">
        <span class="notification p-relative">
            <i class="fa-regular fa-bell fa-lg"></i>
        </span>
        <img src="~/imgs/avatar.png" alt="" />
    </div>
</div>
<!-- End Head -->
<h1 class="p-relative">Staff</h1>
<div class="courses-page d-grid m-20 gap-20">

    <div class="course bg-white rad-6 p-relative">
        <img class="cover" src="~/imgs/logo.jpg" alt="camp image" />
        <div class="p-20">
            <h4 class="m-0">Staff</h4>
            <p class="description c-grey mt-15 fs-14">MyStaff</p>
        </div>
        <div class="btn-groups mb-3 p-2">

            <a asp-controller="Crew" asp-action="Index" class="btn btn-primary me-2">
                Crew <i class="fa-solid fa-arrow-right-to-bracket ps-1"></i>
            </a>
            
        </div>
        
    </div>
    <div class="course bg-white rad-6 p-relative">
        <img class="cover" src="~/imgs/logo.jpg" alt="camp image" />
        <div class="p-20">
            <h4 class="m-0">New Staff</h4>
            <p class="description c-grey mt-15 fs-14">New Staff Request</p>
        </div>
        <div class="btn-groups mb-3 p-2">

            <a asp-controller="NewStaff" asp-action="Index" class="btn btn-primary me-2">
                New Staff <i class="fa-solid fa-arrow-right-to-bracket ps-1"></i>
            </a>

        </div>

    </div>

</div>

