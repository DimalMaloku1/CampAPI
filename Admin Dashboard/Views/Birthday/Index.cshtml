@model IReadOnlyList<BirthdayViewModel>
@{
    ViewData["Title"] = "Birthday Party";
}

<div class="head bg-white p-15 between-flex">

    <div class="icons d-flex align-center">
        <span class="notification p-relative">
            <i class="fa-regular fa-bell fa-lg"></i>
        </span>
        <img src="~/imgs/avatar.png" alt="logo" />
    </div>
</div>

<h1 class="p-relative">Birthday Party</h1>

@if (@Model != null)
{
    <div class="projects p-20 bg-white rad-10 m-20">
        
        <div class="responsive-table">
            <table class="fs-15 w-full text-center">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>

                        <td>Date</td>
                        <td>GuestCount</td>
                        <td>Theme</td>
                        <td>PaymentMethod</td>
                        <td>Details</td>                      
                        <td>Delete</td>



                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>

                            <td>@item.Date</td>
                            <td>@item.GuestCount</td>
                            <td>@item.Theme</td>
                            <td>@item.PaymentMethod</td>

                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary pe-2">
                                    Details
                                    <i class="fa-solid fa-arrow-right-to-bracket ps-1"></i>
                                </a>
                            </td>

                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger pe-2">
                                    Delete
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </td>
                        </tr>




                    </tbody>
                }

            </table>
        </div>
    </div>
}
else
{
    <div class="alert-warning">
        <h3>No Birthday Parties Found!!</h3>
    </div>
}

